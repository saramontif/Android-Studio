<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.yealm.takego1.controller.ShowAllBranch">

<LinearLayout
    android:layout_width="368dp"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/labeladdressTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:text="address:  " />
    <TextView
        android:id="@+id/addressTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="address" />

</LinearLayout>

<LinearLayout
    android:layout_width="368dp"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/labelnumOfBranchTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:text="numOfBranch:   " />
    <TextView
        android:id="@+id/numOfBranchTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="numOfBranch" />
</LinearLayout>
<LinearLayout
        android:layout_width="368dp"
        android:layout_height="wrap_content">
    <TextView
        android:id="@+id/labelnumParkingSpacesTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:text="numParkingSpaces:   " />
    <TextView
        android:id="@+id/numParkingSpacesTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="numParkingSpaces" />
</LinearLayout>
</LinearLayout>

