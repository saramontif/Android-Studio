<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.yealm.takego1.controller.MainActivity"
    android:weightSum="1">

    <Button
        android:id="@+id/addcostumerbutton"
        android:layout_width="180dp"
        android:layout_height="49dp"
        android:text="add costumer"
        tools:layout_editor_absoluteX="115dp"
        tools:layout_editor_absoluteY="15dp" />

    <Button
        android:id="@+id/addcarmodelbutton"
        android:layout_width="180dp"
        android:layout_height="49dp"
        android:text="add car model"
        tools:layout_editor_absoluteX="115dp"
        tools:layout_editor_absoluteY="70dp" />

    <Button
        android:id="@+id/addcarbutton"
        android:layout_width="180dp"
        android:layout_height="49dp"
        android:text="add car"
        tools:layout_editor_absoluteX="115dp"
        tools:layout_editor_absoluteY="125dp" />

    <Button
        android:id="@+id/showallcarsmodelbutton"
        android:layout_width="180dp"
        android:layout_height="49dp"
        android:text="SHOW all car's model"
        tools:layout_editor_absoluteX="115dp"
        tools:layout_editor_absoluteY="180dp"
        android:layout_weight="0.07" />

    <Button
        android:id="@+id/showallcostumersbutton"
        android:layout_width="180dp"
        android:layout_height="49dp"
        android:text="SHOW all costumers"
        tools:layout_editor_absoluteX="115dp"
        tools:layout_editor_absoluteY="235dp" />

    <Button
        android:id="@+id/showallbranchbutton"
        android:layout_width="180dp"
        android:layout_height="49dp"
        android:text="SHOW all branchs"
        tools:layout_editor_absoluteX="115dp"
        tools:layout_editor_absoluteY="290dp" />

    <Button
        android:id="@+id/showallcarsbutton"
        android:layout_width="180dp"
        android:layout_height="49dp"
        android:text="SHOW all cars"
        tools:layout_editor_absoluteX="115dp"
        tools:layout_editor_absoluteY="350dp" />

</LinearLayout>
