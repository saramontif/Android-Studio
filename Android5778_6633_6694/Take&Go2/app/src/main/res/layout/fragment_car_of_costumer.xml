<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.yealm.takego2.controller.CarOfCostumer">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="left"
        android:orientation="vertical">

        <Space
            android:layout_width="wrap_content"
            android:layout_height="30dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/detailsCar"
            android:textColor="@color/some_blue"
            android:textSize="25dp"
            android:textStyle="bold" />

        <Space
            android:layout_width="wrap_content"
            android:layout_height="20dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:background="@color/whiteperple">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:ems="8"
                android:text="     Car Model:"
                android:textColor="@color/black"
                android:textSize="16dp"
                />

            <TextView
                android:id="@+id/carModelTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="car Model"
                android:inputType="text"
                android:textSize="16dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:background="@color/whiteperple">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:ems="8"
                android:text="     Car Kilometeres:"
                android:textColor="@color/black"
                android:textSize="16dp"/>

            <TextView
                android:id="@+id/numOfkilometerTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="number Of kilometer:"
                android:inputType="number"
                android:textSize="16dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:background="@color/whiteperple">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:ems="8"
                android:text="     Car Number:"
                android:textColor="@color/black"
                android:textSize="16dp"/>

            <TextView
                android:id="@+id/numOfCarTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="number Of Car"
                android:inputType="number"
                android:textSize="16dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:background="@color/whiteperple">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:ems="8"
                android:text="     Branch Number:"
                android:textColor="@color/black"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/branchCarTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="branch Car"
                android:inputType="text"
                android:textSize="16dp"/>
        </LinearLayout>

        <Space
            android:layout_width="wrap_content"
            android:layout_height="50dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/closeOrder"
            android:textColor="@color/light_perple2"
            android:textSize="22dp"
            android:textStyle="bold" />

        <Space
            android:layout_width="wrap_content"
            android:layout_height="10dp" />

        <LinearLayout
            android:layout_width="286dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1"
            android:layout_gravity="center">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/fuel"
                android:layout_weight="0.12" />

            <CheckBox
                android:id="@+id/checkBoxFuel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Do you add fuel?"
                android:textSize="18dp"/>

        </LinearLayout>


        <EditText
            android:id="@+id/numkilomEdit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint=" Enter number Of KM"
            android:layout_gravity="center"/>

        <Space
            android:layout_width="wrap_content"
            android:layout_height="18dp" />

        <Button
            android:id="@+id/CloseOrderButton"
            android:layout_width="166dp"
            android:layout_height="49dp"
            android:background="@drawable/buttonshape"
            android:layout_gravity="center"
            android:text="Close Order"
            android:textSize="17dp"/>
        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="385dp"
            android:layout_height="match_parent"
            android:src="@mipmap/ic_launcher"
            android:layout_gravity="right"/>


    </LinearLayout>

</FrameLayout>
